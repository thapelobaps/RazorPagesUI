@page
@model RazorPagesUI.Pages.LoginModel
@{
    ViewData["Title"] = "Log In";
}

<section class="min-h-screen flex items-center justify-center bg-gray-100 py-12">
    <div class="bg-white rounded-xl shadow-lg p-8 max-w-md w-full animate-fade-in-up">
        <h2 class="text-3xl font-bold text-gray-800 text-center mb-6">Welcome Back</h2>
        <form method="post" id="login-form" class="space-y-6">
            <!-- Email -->
            <div>
                <label for="login-email" class="block text-gray-600 text-sm font-medium mb-2">Email</label>
                <input type="email" id="login-email" asp-for="LoginUser.Email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-transform transform focus:scale-105" placeholder="Enter your email">
                <span asp-validation-for="LoginUser.Email" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            <!-- Password -->
            <div>
                <label for="login-password" class="block text-gray-600 text-sm font-medium mb-2">Password</label>
                <input type="password" id="login-password" asp-for="LoginUser.Password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-transform transform focus:scale-105" placeholder="Enter your password">
                <span asp-validation-for="LoginUser.Password" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            <!-- Submit Button -->
            <button type="submit" class="w-full bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-indigo-700 transition-transform transform hover:scale-105">Log In</button>
        </form>
        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mt-6 p-4 bg-red-100 text-red-700 rounded-lg text-center animate-fade-in">
                @Model.ErrorMessage
            </div>
        }
        <!-- Forgot Password and Register Links -->
        <div class="mt-6 text-center space-y-2">
            <p>
                <a asp-page="/ResetPassword" class="text-indigo-600 hover:text-indigo-800 font-semibold transition-colors">Forgot Password?</a>
            </p>
            <p class="text-gray-600">
                Donâ€™t have an account? <a asp-page="/Register" class="text-indigo-600 hover:text-indigo-800 font-semibold transition-colors">Sign Up</a>
            </p>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#login-form").validate({
                errorClass: "text-red-500 text-xs mt-1",
                errorElement: "span"
            });
        });
    </script>
}