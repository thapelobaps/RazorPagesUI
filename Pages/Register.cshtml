@page
@model RazorPagesUI.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="min-h-screen flex items-center justify-center bg-gray-100 py-12">
    <div class="bg-white rounded-xl shadow-lg p-8 max-w-md w-full animate-fade-in-up">
        <h2 class="text-3xl font-bold text-gray-800 text-center mb-6">Create Your Account</h2>
        <form method="post" id="register-form" class="space-y-6">
            <!-- Full Name -->
            <div>
                <label for="full-name" class="block text-gray-600 text-sm font-medium mb-2">Full Name</label>
                <input type="text" id="full-name" asp-for="RegisterUser.FullName" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-transform transform focus:scale-105" placeholder="Enter your full name">
                <span asp-validation-for="RegisterUser.FullName" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            <!-- Email -->
            <div>
                <label for="email" class="block text-gray-600 text-sm font-medium mb-2">Email</label>
                <input type="email" id="email" asp-for="RegisterUser.Email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-transform transform focus:scale-105" placeholder="Enter your email">
                <span asp-validation-for="RegisterUser.Email" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            <!-- Password -->
            <div>
                <label for="password" class="block text-gray-600 text-sm font-medium mb-2">Password</label>
                <input type="password" id="password" asp-for="RegisterUser.Password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-transform transform focus:scale-105" placeholder="Enter your password">
                <span asp-validation-for="RegisterUser.Password" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            <!-- Submit Button -->
            <button type="submit" class="w-full bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-indigo-700 transition-transform transform hover:scale-105">Register</button>
        </form>
        <!-- Success/Error Messages -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mt-6 p-4 bg-red-100 text-red-700 rounded-lg text-center animate-fade-in">
                @Model.ErrorMessage
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="mt-6 p-4 bg-green-100 text-green-700 rounded-lg text-center animate-fade-in">
                @Model.SuccessMessage
            </div>
        }
        <!-- Login Link -->
        <p class="mt-6 text-center text-gray-600">
            Already have an account? <a asp-page="/Login" class="text-indigo-600 hover:text-indigo-800 font-semibold transition-colors">Log In</a>
        </p>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#register-form").validate({
                errorClass: "text-red-500 text-xs mt-1",
                errorElement: "span"
            });
        });
    </script>
}