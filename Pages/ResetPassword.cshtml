@page
@model RazorPagesUI.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<section class="min-h-screen flex items-center justify-center bg-gray-100 py-12">
    <div class="bg-white rounded-xl shadow-lg p-8 max-w-md w-full animate-fade-in-up">
        <h2 class="text-3xl font-bold text-gray-800 text-center mb-6">Reset Your Password</h2>
        <p class="text-gray-600 text-center mb-6">Enter your email address to receive a new password.</p>
        <form method="post" id="reset-password-form" class="space-y-6">
            <!-- Email -->
            <div>
                <label for="reset-email" class="block text-gray-600 text-sm font-medium mb-2">Email</label>
                <input type="email" id="reset-email" asp-for="Email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-transform transform focus:scale-105" placeholder="Enter your email">
                <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            <!-- Submit Button -->
            <button type="submit" class="w-full bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-indigo-700 transition-transform transform hover:scale-105">Reset Password</button>
        </form>
        <!-- Success/Error Messages -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mt-6 p-4 bg-red-100 text-red-700 rounded-lg text-center animate-fade-in">
                @Model.ErrorMessage
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="mt-6 p-4 bg-green-100 text-green-700 rounded-lg text-center animate-fade-in">
                @Model.SuccessMessage
            </div>
        }
        <!-- Back to Login Link -->
        <p class="mt-6 text-center text-gray-600">
            Remember your password? <a asp-page="/Login" class="text-indigo-600 hover:text-indigo-800 font-semibold transition-colors">Log In</a>
        </p>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#reset-password-form").validate({
                errorClass: "text-red-500 text-xs mt-1",
                errorElement: "span",
                rules: {
                    "Email": {
                        required: true,
                        email: true
                    }
                },
                messages: {
                    "Email": {
                        required: "Email is required",
                        email: "Please enter a valid email address"
                    }
                }
            });
        });
    </script>
}